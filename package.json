{
  "name": "clubcalendar",
  "version": "1.0.0",
  "description": "A customizable event calendar widget for Wild Apricot organizations.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "vitest run && playwright test",
    "test:certify": "vitest run tests/certification",
    "test:certify:sbnc": "vitest run tests/certification/sbnc-certification.test.ts",
    "test:buddy": "playwright test --config tests/certification/playwright.config.ts",
    "test:buddy:sbnc": "playwright test sbnc-live.spec.ts --config tests/certification/playwright.config.ts",
    "certify:sbnc": "npm run test:certify:sbnc && npm run test:buddy:sbnc",
    "certify:full": "npm run test && npm run test:e2e && npm run certify:sbnc",
    "build:widget": "npx tsx scripts/build/build-widget.ts",
    "build:sbnc": "npx tsx scripts/build/build-widget.ts sbnc",
    "build:interactive": "npx tsx scripts/build/build-widget.ts --interactive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbnctech/clubcalendar.git"
  },
  "keywords": [
    "wild-apricot",
    "calendar",
    "widget",
    "events"
  ],
  "author": "sbnctech",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sbnctech/clubcalendar/issues"
  },
  "homepage": "https://github.com/sbnctech/clubcalendar#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "serve": "^14.2.5",
    "vitest": "^4.0.16"
  }
}
